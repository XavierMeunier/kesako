= form_for @question do |f|
  %div.content
    %br
    = f.text_field :content, class: "q_answer"

  %div.level_box
    = f.label :level, "Niveau"
    %div.dropdown
      = f.collection_select :level_id, @levels,:id,:name

  %div.topics
    %h1 Sujets
    - @topics.each do |t|
      %div.topic
        %strong= t.name
        = f.collection_check_boxes :sub_topic_ids, t.sub_topics, :id, :name do |b|
          .my-checkbox-wrapper
            = b.check_box
            = b.label

  %div.new_answer
    = add_child_button "Nouvelle RÃ©ponse",:answers,"answers"
    = new_fields_template f, :answers

  %div#answers
    %table#manage
      %thead
        %tr
          %td
            Contenu
          %td
            Correct
          %td
            DÃ©faut
          %td
            Supprimer
      %tbody
        = f.fields_for :answers do |builder|
          =render "answer_fields", :f => builder

  %p.button
    = f.submit "Sauvegarder", class: "q_submit"